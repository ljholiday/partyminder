{
    "name": "partyminder/partyminder",
    "description": "AI-powered social event planning with federated networking",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "PartyMinder Team",
            "homepage": "https://partyminder.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "yoast/phpunit-polyfills": "^2.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.4",
        "phpcompatibility/php-compatibility": "^9.3",
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "PartyMinder\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "tests": "phpunit",
        "test:unit": "PARTYMINDER_TEST_TYPE=unit phpunit --testsuite unit",
        "test:integration": "phpunit --testsuite integration",
        "test:snapshot": "phpunit --testsuite snapshot",
        "lint": "phpcs --standard=WordPress includes/ templates/ partyminder.php",
        "lint:fix": "phpcbf --standard=WordPress includes/ templates/ partyminder.php",
        "test:coverage": "phpunit --coverage-html coverage/",
        "test:all": [
            "@lint",
            "@test"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}